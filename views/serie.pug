html 
    head 
        title= serie.name 
        link(rel="stylesheet", href="/output.css")
    body 
        div(class="grid grid-cols-2 gap-8 max-w-4xl mx-auto mt-28")
            div 
                img(src=`https://image.tmdb.org/t/p/original${serie.poster_path}`, alt="", class="w-full h-full object-cover rounded-lg")
            div
                h1(class="font-bold text-5xl")= serie.name
                p(class="text-orange-500 mt-4 font-semibold flex items-center gap-2")
                    img(src="/star.svg", alt="", class="w-6")
                    span= serie.vote_average
                p(class="text-gray-800 mt-4")= serie.overview